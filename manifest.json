{
    "manifest_version": 3,
    "name": "Time Limit",
    "version": "1.0",
    "description": "Time limit extension capstone project",
    "permissions": ["storage", "tabs", "alarms", "scripting", "activeTab"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "host_permissions": ["<all_urls>"]
}